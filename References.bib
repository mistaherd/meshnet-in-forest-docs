AUTHOR = {Zhao, Ming and Ye, Ren-Jie and Chen, Shuo-Tsung and Chen, Yen-Chun and Chen, Zi-Yu},
TITLE = {Realization of Forest Internet of Things Using Wireless Network Communication Technology of Low-Power Wide-Area Network},
JOURNAL = {Sensors},
VOLUME = {23},
